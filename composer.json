{
    "name": "betasyntax/betasyntax",
    "description": "Beta Syntax Framework.",
    "keywords": ["framework", "betasyntax"],
    "license": "MIT",
    "type": "project",
    "version": "0.0.1",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/betasyntax/framework"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "ext-mbstring":"*",
        "ext-openssl":"*",
        "betasyntax/framework":"dev-masater as 0.0.1"
    },
    "require-dev": {
        "phpunit/phpunit":"5.4.*",
        "phpunit/php-invoker": "*",
        "robmorgan/phinx":"v0.6.4",
        "mockery/mockery": "~0.9"
    },
    "autoload": {
        "psr-4": {
          "App\\":"app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "mv -Rf ./vendor/betasyntax/betasyntax/* ./",
            "rm -Rf ./vendor/betasyntax/betasyntax",
            "composer update"
        ]
    }
}
